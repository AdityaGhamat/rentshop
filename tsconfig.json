{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@users/*": ["src/modules/users/*"],
      "@products/*": ["src/modules/products/*"],
      "@core/*": ["src/modules/core/*"],
      "@utils/*": ["src/modules/core/utility/*"]
    }
  },
  "include": ["src"]
}
