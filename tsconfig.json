{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@user": ["src/modules/user/index.ts"],
      "@user/*": ["src/modules/user/*"],
      "@product": ["src/modules/product/index.ts"],
      "@product/*": ["src/modules/product/*"],
      "@core/*": ["src/modules/core/*"]
    }
  },
  "include": ["src"]
}
